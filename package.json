{
  "name": "inditex-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:c": "react-scripts test --watchAll --coverage",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.7.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@tanstack/query-sync-storage-persister": "^4.29.19",
    "@tanstack/react-query": "^4.29.19",
    "@tanstack/react-query-persist-client": "^4.29.19",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "axios": "^1.4.0",
    "format-util": "^1.0.5",
    "framer-motion": "^10.12.18",
    "named-urls": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/format-util": "^1.0.2",
    "msw": "^1.2.2"
  },
  "jest": {
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/setupTests.ts",
      "/src/router/*",
      "/src/mocks/*",
      "/src/theme/*",
      "/src/api/*",
      "/src/interfaces/*",
      "/src/constants/*",
      "/src/services/*",
      "index\\.tsx?$",
      "/src/setupTests.ts"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 75,
        "lines": 85,
        "statements": 84,
        "branches": 75
      }
    }
  },
  "msw": {
    "workerDirectory": "public"
  }
}
